<!-- -->
<launch>

  <arg name="method_type" default="0" /> <!-- pcl_generic=0, pcl_anh=1, pcl_anh_gpu=2, pcl_openmp=3 -->
  <arg name="use_gnss" default="0" />
  <arg name="use_odom" default="false" />
  <arg name="use_imu" default="false" />
  <arg name="imu_upside_down" default="false" />
  <arg name="imu_topic" default="/imu_raw" />
  <arg name="queue_size" default="1" />
  <arg name="offset" default="linear" />
  <arg name="get_height" default="false" />
  <arg name="use_local_transform" default="false" />
  <arg name="sync" default="false" />
  <arg name="output_log_data" default="true" />
  <arg name="map_path" default="/media/kitsukawa/ssd/nagoya/nu/" />
  <arg name="rosbag" default="/media/kitsukawa/ssd/nagoya/vls_128_2019-04-18-17-58-12_points.bag" />
  <!-- ndt parameters -->
  <arg name="resolution" default="1.0" />
  <arg name="step_size" default="0.1" />
  <arg name="trans_epsilon" default="0.01" />
  <arg name="max_iterations" default="30" />
  <arg name="voxel_grid_size" default="2.0" />
  <!-- initial pose-->
  <arg name="init_x" default="-18178.9" />
  <arg name="init_y" default="-93614.6" />
  <arg name="init_z" default="39.4964" />
  <arg name="init_roll" default="0.0" />
  <arg name="init_pitch" default="0.0" />
  <arg name="init_yaw" default="-0.485362" />
  <arg name="plane" default="7" />

  <node pkg="lidar_localizer" type="ndt_matching_offline" name="ndt_matching_offline" output="screen">
    <param name="method_type" value="$(arg method_type)" />
    <param name="use_gnss" value="$(arg use_gnss)" />
    <param name="use_odom" value="$(arg use_odom)" />
    <param name="use_imu" value="$(arg use_imu)" />
    <param name="imu_upside_down" value="$(arg imu_upside_down)" />
    <param name="imu_topic" value="$(arg imu_topic)" />
    <param name="queue_size" value="$(arg queue_size)" />
    <param name="offset" value="$(arg offset)" />
    <param name="get_height" value="$(arg get_height)" />
    <param name="use_local_transform" value="$(arg use_local_transform)" />
    <param name="output_log_data" value="$(arg output_log_data)" />
    <param name="map_path" value="$(arg map_path)" />
    <param name="rosbag" value="$(arg rosbag)" />

    <param name="resolution" value="$(arg resolution)" />
    <param name="step_size" value="$(arg step_size)" />
    <param name="trans_epsilon" value="$(arg trans_epsilon)" />
    <param name="max_iterations" value="$(arg max_iterations)" />
    <param name="voxel_grid_size" value="$(arg voxel_grid_size)" />

    <param name="init_x" value="$(arg init_x)" />
    <param name="init_y" value="$(arg init_y)" />
    <param name="init_z" value="$(arg init_z)" />
    <param name="init_roll" value="$(arg init_roll)" />
    <param name="init_pitch" value="$(arg init_pitch)" />
    <param name="init_yaw" value="$(arg init_yaw)" />
    <param name="plane" value="$(arg plane)" />

    <remap from="/points_raw" to="/sync_drivers/points_raw" if="$(arg sync)" />
  </node>

</launch>
